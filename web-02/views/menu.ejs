<a id="login" href="/users/login" class="me-3 float-end">로그인</a>
<a id="logout" class="me-3 float-end">로그아웃</a>
<a id="mypage" class="me-3 float-end">마이페이지</a>
<hr>
</div>

<script>

  const email = sessionStorage.getItem('email');
  if (email) {
    $('#login').hide();
    $('#logout, #mypage').show();
    $('#mypage').text(email + '님');
  } else {
    $('#login').show();
    $('#logout, #mypage').hide();
  }
  $('#logout').click((e) => {
    e.preventDefault();
    sessionStorage.removeItem('email');
    location.href = '/';
  });
</script>